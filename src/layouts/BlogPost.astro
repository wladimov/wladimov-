---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
		alt?: string;
	};
}

const {
	content: { title, description, pubDate, updatedDate, heroImage, alt },
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			.info {
				font-size: 12px;
				color: #777;
			}
			hr {
  				border-top: 1px solid #DDD;
				margin: 1rem 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				{heroImage && (
					<img
						width={720}
						height={360}
						src={heroImage}
						alt={alt}
					/>
				)}
				<h1 class="title">{title}</h1>
				{pubDate &&
					<time class="info">
						{new Date(pubDate).toLocaleDateString('es', {
							year: 'numeric',
							month: 'long',
							day: 'numeric',
						})}
					</time>
				}
				{updatedDate && <div>Last updated on <time>{updatedDate}</time></div>}
				<span class="info">| 3 minutos de lectura</span>
				<hr/>
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
