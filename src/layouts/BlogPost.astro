---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
		alt?: string;
		tag?: string;
		tagImage?: string;
		tagAlt?: string;
	};
}

const {
	content: { title, description, pubDate, updatedDate, heroImage, alt, tag, tagImage, tagAlt, },
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			.info {
				display: flex;
				align-items: center;
			}
			.time {
				font-size: 12px;
				color: #777;
			}
			hr {
  				border-top: 1px solid #DDD;
				margin: 1rem 0;
			}
			.tag-img {
				width: 20px;
				height: 20px;
				margin-right: 10px;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				{heroImage && (
					<img
						width={720}
						height={360}
						src={heroImage}
						alt={alt}
					/>
				)}
				<h1 class="title">{title}</h1>
				<div class="info">
					<img class="tag-img" src={tagImage} alt={tagAlt}>
					{pubDate &&
						<time class="time">
							{new Date(pubDate).toLocaleDateString('es', {
								year: 'numeric',
								month: 'long',
								day: 'numeric',
							})}
						</time>
					}
					{updatedDate && <div>Last updated on <time>{updatedDate}</time></div>}
					<span class="time">&nbsp;Â· 3 minutos de lectura</span>
				</div>
				<hr/>
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
